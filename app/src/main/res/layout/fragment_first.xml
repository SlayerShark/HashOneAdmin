<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical"
    tools:context=".fragment.FirstFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMobile"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_mobile"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/blood_dark"
        app:hintTextColor="@color/blood_darker"
        app:helperText="Enter 10 digits mobile number."
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:prefixText="+977">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="10"
            android:hint="Mobile"
            android:textCursorDrawable="@drawable/cursor_color"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/btnSendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Send OTP"
        android:background="@color/blood_dark"/>

</com.google.android.material.circularreveal.CircularRevealLinearLayout>